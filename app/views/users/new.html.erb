<%= nested_form_for @user do |form| %>
<div style="color:green;">
  <%= form.label :name, 'NAME' %><br>
  <%= form.text_field :name %><br>
</div>

<div style="color:green;">
  <%= form.label :age, 'AGE' %><br>
  <%= form.text_field :age %><br>
</div>

<div style="color:green;">
  <%= form.label :email, 'EMAIL' %><br>
  <%= form.text_field :email %><br>
</div>

<div style="color:green;">
  <%= form.label :password, "PASSWORD" %><br>
  <%= form.text_field :password %><br>
</div>

  <%= form.fields_for :books do |f|%>

<div style="color:green;">
    <%= f.label :name%>
    <%= f.text_field :name%>
    <%= f.link_to_remove "Remove this task" %>
</div>
    <%= form.link_to_add "Add a task", :books, :data => { :target => "#books" } %>

    <% end %>

  <%= form.submit%>

  <% end %>
